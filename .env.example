# API config
PORT=5000

# Démarches Simplifiées
DS_API_TOKEN=
DS_API_ENDPOINT=https://www.demarches-simplifiees.fr/api/v2/graphql

# MongoDB config
MONGODB_URL=mongodb://localhost:27017
MONGODB_DBNAME=prelevements-deau

# Redis config (required for BullMQ workers - background job processing)
# Install Redis: brew install redis (macOS) or docker run -d -p 6379:6379 redis:alpine
REDIS_URL=redis://localhost:6379

# BullBoard - Dashboard de monitoring des queues (optionnel)
# Accessible sur /admin/queues avec authentification Basic
# Si non défini, BullBoard est désactivé
BULLBOARD_PASSWORD=

# S3 config
S3_ENDPOINT=https://s3.fr-par.scw.cloud
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_PREFIX=
S3_REGION=fr-par

# CSV Source
CSV_SOURCE_URL=

# Import territoire - Options avancées
# Skip l'upload des documents vers S3 lors de l'import (optionnel)
SKIP_DOCUMENT_UPLOAD=false
S3_PUBLIC_URL=

# Email / SMTP config
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM="Prélèvements d'eau <noreply@example.com>"

# Auth config
API_URL=http://localhost:5000
FRONT_URL=http://localhost:3000
AUTH_TOKEN_TTL=3600
SESSION_TOKEN_TTL=2592000
NODE_ENV=development
