enum ZoneType {
  REGION
  DEPARTEMENT
  SAGE
}

model Zone {
  id String @id @default(uuid()) @db.Uuid

  code        String                                     @db.Text
  type        ZoneType
  name        String                                     @db.Text
  coordinates Unsupported("geometry(MultiPolygon,4326)")

  instructorZones       InstructorZone[]
  pointPrelevementZones PointPrelevementZone[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type, code])
  @@index([type])
  @@index([code])
  @@index([coordinates], type: Gist)
}
