{
  "name": "prelevement-deau-data",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node api.js",
    "start:worker": "node worker.js",
    "sync-updated-dossiers": "node scripts/sync-updated-dossiers.js",
    "resync-all-dossiers": "node scripts/resync-all-dossiers.js",
    "import-territoire-data": "node scripts/import-territoire-data.js",
    "import-reference-data": "node scripts/import-reference-data.js",
    "download-csv": "node scripts/download-csv.js",
    "validate-declaration-file": "node scripts/validate-declaration-file.js",
    "drop-dossiers-collections": "node scripts/drop-dossiers-collections.js",
    "lint": "xo",
    "lint:openapi": "spectral lint docs/openapi.yaml",
    "test": "ava --serial",
    "coverage": "c8 ava --serial",
    "coverage:report": "c8 --reporter=html --reporter=text ava --serial"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.895.0",
    "@aws-sdk/lib-storage": "^3.895.0",
    "@aws-sdk/s3-request-presigner": "^3.895.0",
    "@bull-board/api": "^6.14.0",
    "@bull-board/express": "^6.14.0",
    "@bull-board/ui": "^6.14.0",
    "@etalab/decoupage-administratif": "^5.2.0",
    "@fabnum/demarches-simplifiees": "workspace:*",
    "@fabnum/prelevements-deau-timeseries-parsers": "workspace:*",
    "bullmq": "^5.61.0",
    "content-disposition": "^0.5.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "hash-object": "^5.0.1",
    "http-errors": "^2.0.0",
    "ioredis": "^5.8.1",
    "joi": "^18.0.1",
    "lodash-es": "^4.17.21",
    "mongodb": "~6.16.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "papaparse": "^5.5.3",
    "proj4": "^2.19.10",
    "wkx": "^0.5.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.11.0",
    "ava": "^6.4.1",
    "c8": "^9.1.0",
    "mongodb-memory-server": "^10.2.1",
    "supertest": "^7.1.4",
    "xo": "^0.60.0"
  },
  "c8": {
    "all": true,
    "include": [
      "lib/**/*.js",
      "packages/**/*.js"
    ],
    "exclude": [
      "**/migrations/**",
      "**/scripts/**",
      "**/data/**",
      "packages/**/docs/**",
      "**/__tests__/**"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "off",
      "object-curly-newline": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-event-target": "off",
      "unicorn/no-array-callback-reference": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off"
    }
  },
  "engines": {
    "node": ">= 24 < 25"
  }
}
